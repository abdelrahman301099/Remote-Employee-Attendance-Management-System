@using NetBlaze.SharedKernel.Enums

<EditForm Model="updateSampleRequestDto" OnValidSubmit="SubmitAsync">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="updateSampleRequestDto.Name"
                                      For="@(() => updateSampleRequestDto.Name)"
                                      Label="Name"
                                      Variant="Variant.Outlined"
                                      Immediate
                                      Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField @bind-Value="updateSampleRequestDto.Description"
                                      For="@(() => updateSampleRequestDto.Description)"
                                      Label="Description"
                                      Lines="4"
                                      Variant="Variant.Outlined"
                                      Immediate
                                      Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField @bind-Value="updateSampleRequestDto.IntegerValue"
                                         For="@(() => updateSampleRequestDto.IntegerValue)"
                                         Label="Integer Value"
                                         Variant="Variant.Outlined"
                                         Immediate
                                         Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField @bind-Value="updateSampleRequestDto.DecimalValue"
                                         For="@(() => updateSampleRequestDto.DecimalValue)"
                                         Label="Decimal Value"
                                         Format="F2"
                                         Variant="Variant.Outlined"
                                         Immediate
                                         Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="updateSampleRequestDto.UniqueIdentifier"
                                      For="@(() => updateSampleRequestDto.UniqueIdentifier)"
                                      Label="Unique Identifier"
                                      Variant="Variant.Outlined"
                                      Immediate
                                      Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect @bind-Value="updateSampleRequestDto.Status"
                                   For="@(() => updateSampleRequestDto.Status)"
                                   Label="Status"
                                   Variant="Variant.Outlined"
                                   Immediate
                                   Class="mb-3">
                            @foreach (var status in Enum.GetValues<SampleStatus>())
                            {
                                <MudSelectItem Value="status">@status.ToString()</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">
                Cancel
            </MudButton>
            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       Variant="Variant.Filled">
                Update Sample
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>